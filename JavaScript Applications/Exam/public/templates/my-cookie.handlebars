<div class="container">
  <div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-5">
      <h1>Your hourly cookie is:</h1>
      <div class="thumbnail">
      <h4 class="">{{shareDate}}</h4>
      <img class="pull-left" src="{{img}}" alt="">
      <div class="clearfix"></div>
      <div class="caption-full" id="cookie-data">
          <h4><a href="#">{{text}}</a>
          </h4>
          <p class="pull-left">
            <button class="btn btn-success" id="like">Like (<span class="likes">{{likes}}</span> likes)</button>
            <button class="btn btn-danger" id="dislike">Dislike (<span class="dislikes">{{dislikes}}</span> dislikes)</button>
            <span class="hidden cookie-id">{{id}}</span>
          </p>
          <div class="clearfix"></div>
      </div>
    </div>
  </div>
</div>
</div>
